# NODE_ENV=development #Mettre production pour le déploiement
NODE_ENV=development

# Port du serveur backend
PORT=3001

# Host (0.0.0.0 pour accepter toutes les connexions, utile en production)
HOST=0.0.0.0

# Origine des CORS - Domaine du frontend (séparés par des virgules)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174



# Clé API pour sécuriser l'accès à l'API
# IMPORTANT: Générez une clé sécurisée avec: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=your-secure-api-key-change-in-production



# Configuration de la base de données MongoDB

# IMPORTANT: Remplacez cette URI par vos véritables identifiants MongoDB

# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# Ou pour MongoDB local: mongodb://localhost:27017/afribourse

DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/afribourse?retryWrites=true&w=majority&appName=Afribourse



# URL du cache Redis (optionnel)

REDIS_URL=



# Configurations JWT

# IMPORTANT: Générez une clé sécurisée avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production

JWT_EXPIRES_IN=7d # Temps d'expiration des tokens JWT



# Configuration des mails (Brevo - anciennement Sendinblue)

SMTP_HOST=smtp-relay.brevo.com

SMTP_PORT=587

# Obtenez vos credentials SMTP sur https://app.brevo.com/settings/keys/smtp
SMTP_USER=your-smtp-user@smtp-brevo.com

SMTP_PASS=your-smtp-password

# Adresse d'expéditeur personnalisée (à configurer après vérification du domaine dans Brevo)
SMTP_FROM_EMAIL=noreply@votre-domaine.com
SMTP_FROM_NAME=AfriBourse

# URLs de l'application
# IMPORTANT: En production, utilisez vos vraies URLs!

FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001



# Configuration des limitations des requêtes

RATE_LIMIT_WINDOW_MS=900000 # 15 minutes en millisecondes

RATE_LIMIT_MAX_REQUESTS=100 # Nombre de requêtes maximum dans le temps imparti



# Configuration des uploads

MAX_FILE_SIZE=10485760 # 10 MB en bytes

UPLOAD_PATH=public/uploads # Répertoire des uploads



LOG_LEVEL=info # Niveau des logs (error, warn, info, debug)
